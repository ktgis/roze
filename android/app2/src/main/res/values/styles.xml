<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBarTransParentStatus">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PermissionTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/permission_bg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RozeSettingBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/common_margin_large</item>
        <item name="android:paddingRight">@dimen/common_margin_large</item>
    </style>

    <style name="RozeCompoundButtonStyle" parent="RozeSettingBaseStyle">
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/setting_item_background</item>
    </style>

    <style name="RozeTextViewStyle" parent="RozeSettingBaseStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/almost_balck</item>
    </style>

    <style name="RozeRadioItemStyle" parent="RozeCompoundButtonStyle">
        <item name="android:drawableRight">@drawable/radio_button_icon</item>
    </style>

    <style name="RozeCheckBoxItemStyle" parent="RozeCompoundButtonStyle">
        <item name="android:drawableRight">@drawable/checkbox_button_icon</item>
    </style>

    <style name="RozeSwitchStyle">
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>

    <style name="SettingSubtitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">@dimen/setting_subtitle_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/common_margin_large</item>
        <item name="android:background">@color/dawm_grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/elephant_grey</item>
        <item name="android:textSize">@dimen/setting_subtitle_font_size</item>
    </style>
</resources>
