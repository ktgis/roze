<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:id="@+id/search_row">

        <TextView
            android:text="name"
            android:id="@+id/text_location_name"
            android:layout_width="0dp"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/search_row"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/search_row"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="@+id/search_row" />

        <TextView
            android:text="address"
            android:id="@+id/text_location_address"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/search_row"
            app:layout_constraintTop_toBottomOf="@+id/text_location_name"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="@+id/search_row" />

        <View
            android:layout_width="0dp"
            android:background="#e7e7e7"
            android:id="@+id/view"
            app:layout_constraintLeft_toLeftOf="@+id/search_row"
            app:layout_constraintRight_toRightOf="@+id/search_row"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/search_row" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            android:id="@+id/imageButton"
            android:background="@android:color/transparent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/search_row"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@+id/search_row" />


</android.support.constraint.ConstraintLayout>

