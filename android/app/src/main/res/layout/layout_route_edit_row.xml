<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/route_select_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/white_button"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/route_select_row_icon_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ico_route_map_start" />

    <TextView
        android:id="@+id/route_select_row_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/route_select_row_delete_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_del"
        android:visibility="gone" />
</LinearLayout>